<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
body {
  margin: 0;
  font-family: Arial, Helvetica, sans-serif;
}

.topnav {
  overflow: hidden;
  background-color: #333;
}

.topnav a {
  float: left;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

.topnav a:hover {
  background-color: #ddd;
  color: black;
}

.topnav a.active {
  background-color: #4CAF50;
  color: white;
}
</style>
</head>
<body>

<div class="topnav">
  <a href="/shelters">View All Shelters</a>
  <a href="/pets">View All Pets</a>
</div>

<div style="padding-left:16px">
  <h2> Enter the new shelter's information: </h2>
  <%= form_tag "/shelters", method: :post do %>
  <%= label_tag "Name:" %><br/>
  <%= text_field_tag :name %><br/>
  <%= label_tag "Address:" %><br/>
  <%= text_field_tag :address %><br/>
  <%= label_tag "State:" %><br/>
  <%= text_field_tag :state %><br/>
  <%= label_tag "City:" %><br/>
  <%= text_field_tag :city %><br/>
  <%= label_tag "Zip Code:" %><br/>
  <%= text_field_tag :zip %><br/><br/>
  <%= submit_tag "Submit" %>
<% end %>
</div>

</body>
</html>
